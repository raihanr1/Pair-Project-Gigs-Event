<%- include('./partials/header') %>
  <%- include('./partials/navbar') %>

    <div class="container-md mt-3">
      <h1 class="text-center">Edit Profile</h1>
      <br>
      <form action="/user/profile/edit" method="post">
        <div class="row">
          <div class="col">
            <label class="form-label">First Name</label>
            <input class="form-control" type="text" name="firstName" value="<%=data[0].firstName%>">
            <br>
            <label class="form-label">Last Name</label>
            <input class="form-control" type="text" name="lastName" value="<%=data[0].lastName%>">
            <br>
            <label class="form-label">Favourite Genre</label>
            <input class="form-control" type="text" name="favoriteGenre" value="<%=data[0].favoriteGenre%>">
          </div>
          <br>
          <div>
            <button type="submit" class="btn btn-dark mt-5 mb-5">Edit</button>
          </div>
          <% if(error) { %>
            <% error.forEach(el=> { %>
              <p style="color: red;">
                <%= el %>
              </p>
              <% }) %>
                <% } %>
      </form>
    </div>

    <%- include('./partials/footer') %>